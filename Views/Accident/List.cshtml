<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kaza Listesi</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" defer></script>
</head>

<body>
    <div class="container mt-5">
        <h1>Kaza Listesi</h1>
        <table id="accidentTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Ölüm Durumu</th>
                    <th>Açıklama</th>
                    <th>Çalışma Yeri</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody id="accidentTableBody">
                <!-- Buraya kazalar eklenecek -->
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
    <script>
        $(document).ready(function () {
            
            fetchAccidents();
        });

        function fetchAccidents() {
            const token = Cookies.get('authToken');
            $.ajax({
                url: 'https://localhost:44384/api/accident/ListAccidents',
                method: 'GET',
                dataType: 'json',
                headers: {
                'Authorization': `Bearer ${token}`,
                'Accept': 'text/plain'
            },
                success: function (data) {
                    const tableBody = $('#accidentTableBody');
                    tableBody.empty();

                    const rowPromises = data.map(function (accident) {
                        return fetchWorkplaceName(accident.idWorkplace).then(function (workplaceName) {
                            return `
                                <tr>
                                    <td>${accident.id}</td>
                                    <td>${accident.accDate}</td>
                                    <td>${accident.accTime}</td>
                                    <td>${accident.fatality ? 'Evet' : 'Hayır'}</td>
                                    <td>${accident.storyOfAccident}</td>
                                    <td>${workplaceName}</td>
                                    <td>
                                        <button class="btn btn-primary btn-sm" onclick="updateAccident(${accident.id})">Güncelle</button>
                                        <button class="btn btn-danger btn-sm" onclick="deleteAccident(${accident.id})">Sil</button>
                                    </td>
                                </tr>`;
                        });
                    });

                    Promise.all(rowPromises).then(function (rowsHtml) {
                        tableBody.append(rowsHtml.join(''));
                        $('#accidentTable').DataTable();
                    });
                },
                error: function (xhr, status, error) {
                    console.error('Hata:', error);
                }
            });
        }

        function fetchWorkplaceName(id) {
            const token = Cookies.get('authToken');
            return $.ajax({
                url: `https://localhost:44384/api/workplace/GetWorkplaceName/${id}`,
                method: 'GET',
                headers: {
                'Authorization': `Bearer ${token}`,
                'Accept': 'text/plain'
            }
            });
        }

        function updateAccident(id) {
            alert(`Güncelleme fonksiyonu tetiklendi. ID: ${id}`);
        }

        function deleteAccident(id) {
            const token = Cookies.get('authToken');
            if (confirm('Bu kazayı silmek istediğinize emin misiniz?')) {
                $.ajax({
                    url: `https://localhost:44384/api/accident/DeleteAccident/${id}`,
                    method: 'DELETE',
                    headers: {
                'Authorization': `Bearer ${token}`,
                'Accept': 'text/plain'
            },
                    success: function () {
                        alert('Kaza başarıyla silindi!');
                        fetchAccidents();
                    },
                    error: function () {
                        alert('Silme işlemi sırasında hata oluştu.');
                    }
                });
            }
        }
    </script>
</body>
</html>
