<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kaza Listesi</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" defer></script>
</head>

<body>
    <div class="container mt-5">
        <h1>Kaza Listesi</h1>
        <table id="accidentTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Ölüm Durumu</th>
                    <th>Açıklama</th>
                    <th>Çalışma Yeri</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody id="accidentTableBody">
                <!-- Buraya kazalar eklenecek -->
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            fetchAccidents();
        });

        function fetchAccidents() {
            fetch('https://localhost:44384/api/accident/ListAccidents')
                .then(response => response.json())
                .then(data => {
                    const tableBody = $('#accidentTableBody');
                    tableBody.empty(); // Önce mevcut içeriği temizle

                    const rows = data.map(accident => {
                        // Çalışma yeri adını çekmek için API çağrısı yapılır
                        return fetchWorkplaceName(accident.idWorkplace).then(workplaceName => {
                            return `
                                <tr>
                                    <td>${accident.id}</td>
                                    <td>${accident.accDate}</td>
                                    <td>${accident.accTime}</td>
                                    <td>${accident.fatality ? 'Evet' : 'Hayır'}</td>
                                    <td>${accident.storyOfAccident}</td>
                                    <td>${workplaceName}</td> <!-- Çalışma yerinin ismi burada gösterilecek -->
                                    <td>
                                        <button class="btn btn-primary btn-sm" onclick="updateAccident(${accident.id})">Güncelle</button>
                                        <button class="btn btn-danger btn-sm" onclick="deleteAccident(${accident.id})">Sil</button>
                                    </td>
                                </tr>`;
                        });
                    });

                    // Tüm fetch işlemleri bitene kadar bekleyin
                    Promise.all(rows).then(rowsHtml => {
                        tableBody.append(rowsHtml.join('')); // Tüm satırları ekleyin
                        $('#accidentTable').DataTable(); // DataTables'i başlat
                    });
                })
                .catch(error => console.error('Hata:', error));
        }

        function fetchWorkplaceName(id) {
            return fetch(`https://localhost:44384/api/workplace/GetWorkplaceName/${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Çalışma yeri adı alınamadı');
                    }
                    return response.text(); // Çalışma yeri adını döndür
                });
        }

        function updateAccident(id) {
            // Güncelleme işlemi için gerekli fonksiyon
            alert(`Güncelleme fonksiyonu tetiklendi. ID: ${id}`);
            // Burada güncelleme sayfasına yönlendirme veya modal açmalısınız
        }

        function deleteAccident(id) {
            if (confirm('Bu kazayı silmek istediğinize emin misiniz?')) {
                fetch(`https://localhost:44384/api/accident/DeleteAccident/${id}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        alert('Kaza başarıyla silindi!');
                        fetchAccidents(); // Listeyi güncelle
                    } else {
                        alert('Silme işlemi sırasında hata oluştu.');
                    }
                })
                .catch(error => console.error('Hata:', error));
            }
        }
    </script>
</body>
</html>
