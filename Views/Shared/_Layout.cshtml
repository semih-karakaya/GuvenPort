@{
    var usernameCookie = Context.Request.Cookies["user_name"];
    var userNameDisplay = Context.Request.Cookies["user_name"];
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Güvenport İSG Sistemi</title>

    <!-- CSS Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.bootstrap5.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/guvenport.styles.css" asp-append-version="true" />

    <!-- AOS Animation -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>
<body>
    <!-- Page Wrapper -->
    <div id="page-wrapper">
        <!-- Header -->
        <header id="header">
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="dashboard" asp-action="Index">
                        <img src="~/gp2.png" alt="Güvenport Logo" />
                        Güvenport İSG
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="dashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>

                            @if (usernameCookie != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cogs me-1"></i>İSG İşlemleri
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-hard-hat me-2"></i>Risk Analizi</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-clipboard-check me-2"></i>Denetim</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-graduation-cap me-2"></i>Eğitimler</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-chart-line me-2"></i>Raporlar</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Login" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-1"></i>Çıkış
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Login" asp-action="Index">
                                        <i class="fas fa-sign-in-alt me-1"></i>Giriş
                                    </a>
                                </li>
                            }
                        </ul>

                        @if (!string.IsNullOrEmpty(userNameDisplay))
                        {
                            <div class="user-info d-flex align-items-center text-white ms-3">
                                <i class="fas fa-user-circle"></i>
                                <span>@userNameDisplay</span>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <main id="main-content">
            <div class="container">
                <div class="main-container">
                    <div class="content-wrapper">
                        @if (ViewData["Title"] != null && ViewData["Title"].ToString() != "Giriş Yap")
                        {
                            <div class="page-header">
                                <h1><i class="fas fa-shield-alt me-2"></i>@ViewData["Title"]</h1>
                                <p>İş Sağlığı ve Güvenliği Yönetim Sistemi</p>
                            </div>
                        }

                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer id="footer">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; @DateTime.Now.Year - Güvenport İSG Sistemi. Tüm hakları saklıdır.</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="footer-links">
                            <a href="#" class="footer-link">Gizlilik Politikası</a>
                            <span class="mx-2">|</span>
                            <a href="#" class="footer-link">Kullanım Şartları</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
