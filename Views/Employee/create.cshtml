<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışan Ekle</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Çalışan Ekle</h1>
        <form id="employeeForm">
            <div class="form-group">
                <label for="name">İsim:</label>
                <input type="text" class="form-control" id="name" required>
            </div>

            <div class="form-group">
                <label for="ssn">SSN:</label>
                <input type="text" class="form-control" id="ssn" required maxlength="11">
                <small class="form-text text-muted">SSN 11 karakter uzunluğunda olmalıdır.</small>
            </div>

            <div class="form-group">
                <label for="sex">Cinsiyet:</label>
                <select class="form-control" id="sex" required>
                    <option value="" disabled selected>Cinsiyeti Seçin</option>
                    <option value="Erkek">Erkek</option>
                    <option value="Kadın">Kadın</option>
                </select>
            </div>

            <div class="form-group">
                <label for="bloodT">Kan Grubu:</label>
                <select class="form-control" id="bloodT" required>
                    <option value="" disabled selected>Kan Gruplarını Seçin</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="0+">0+</option>
                    <option value="0-">0-</option>
                </select>
            </div>

            <div class="form-group">
                <label for="dob">Doğum Tarihi:</label>
                <input type="date" class="form-control" id="dob" required>
            </div>

            <div class="form-group">
                <label for="disable">Engelli:</label>
                <input type="checkbox" id="disable">
            </div>

            <div class="form-group">
                <label for="active">Aktif:</label>
                <input type="checkbox" id="active" checked>
            </div>

            <div class="form-group">
                <label for="entryDate">Giriş Tarihi:</label>
                <input type="date" class="form-control" id="entryDate" required>
            </div>

            <div class="form-group">
                <label for="chronic">Kronik Hastalık:</label>
                <input type="checkbox" id="chronic">
            </div>

            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
    <script>
        $(document).ready(function() {
            const token = Cookies.get('authToken');
            $('#employeeForm').on('submit', function(event) {
                event.preventDefault(); // Formun varsayılan davranışını engeller

                const employeeData = {
                    id: 0,
                    name: $('#name').val(),
                    ssn: $('#ssn').val(),
                    sex: $('#sex').val(), // Dropdown'dan seçilen cinsiyeti alıyoruz
                    bloodT: $('#bloodT').val(), // Dropdown'dan seçilen kan grubunu alıyoruz
                    dob: $('#dob').val(),
                    disable: $('#disable').is(':checked'),
                    active: $('#active').is(':checked'),
                    entryDate: $('#entryDate').val(),
                    chronic: $('#chronic').is(':checked')
                };

                $.ajax({
                    url: 'https://localhost:44384/api/employees/add',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(employeeData),
                    headers: {
                'Authorization': `Bearer ${token}`,
                'Accept': 'text/plain'
            },
                    success: function(response) {
                        alert('Çalışan başarıyla eklendi!');
                        $('#employeeForm')[0].reset(); // Formu sıfırlar
                    },
                    error: function(xhr, status, error) {
                        alert('Bir hata oluştu: ' + error);
                    }
                });
            });
        });
    </script>
</body>
</html>
